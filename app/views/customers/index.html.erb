<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Furigana</th>
      <th>Sex</th>
      <th>Mail</th>
      <th>Phone number</th>
      <th>Post</th>
      <th>Pref</th>
      <th>Add</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.furigana %></td>
        <td><%= customer.sex %></td>
        <td><%= customer.mail %></td>
        <td><%= customer.phone_number %></td>
        <td><%= customer.post %></td>
        <td><%= customer.pref %></td>
        <td><%= customer.add %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

