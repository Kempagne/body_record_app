<p id="notice"><%= notice %></p>

<h1>Customer Records</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Customer name</th>
      <th>Staff name</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_records.each do |customer_record| %>
      <tr>
        <td><%= customer_record.date %></td>
        <td><%= customer_record.customer_name %></td>
        <td><%= customer_record.staff_name %></td>
        <td><%= customer_record.note %></td>
        <td><%= link_to 'Show', customer_record %></td>
        <td><%= link_to 'Edit', edit_customer_record_path(customer_record) %></td>
        <td><%= link_to 'Destroy', customer_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

